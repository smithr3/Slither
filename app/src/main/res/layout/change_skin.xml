<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton android:id="@+id/ibLeftChangeSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:background="@drawable/left_arrow" android:layout_alignParentLeft="true" />

        <mobile.group16.slither.ChangeSkinView android:id="@+id/changeSkinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true" />

        <ImageButton android:id="@+id/ibRightChangeSkin"
            android:layout_width="wrap_content" android:layout_centerVertical="true"
            android:layout_height="77dp"
            android:background="@drawable/right_arrow" android:layout_alignParentRight="true" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content" android:id="@+id/buttonSave"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:text="Save" android:layout_alignParentBottom="true" />

</RelativeLayout>