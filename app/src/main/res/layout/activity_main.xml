<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    android:scaleType="centerCrop"
    android:background="@drawable/sliter_io_background"
    tools:context=".MainActivity">

    <ImageView  android:layout_centerHorizontal="true" android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/sliter_io"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/settings"
        android:layout_alignParentRight="true"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@drawable/change_skin"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#FFFFFF" android:text="Change Skin"/>
    </LinearLayout>



    <Button
        android:id="@+id/buttonPlay"
        android:background="@drawable/play_online_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_above="@+id/buttonScore" android:text="Play Online"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonScore"
        android:background="@drawable/high_score"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:text="High Score"
        android:layout_centerHorizontal="true" />

</RelativeLayout>